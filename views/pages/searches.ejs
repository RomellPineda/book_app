<main>
  <h3 class="center">Search results</h3>
  <div class="content">
    <% books.forEach(book => { %>
    <% if (book.image_url) { %>
    <img src="<%= book.image_url %>" />
    <% } %>
    <h2><%= book.title %> </h2>
    <h3><%= book.author %> </h3>
    <!-- <h4><%= book.isbn %> </h4> -->
    <h3><%= book.categorie %> </h3>
    <p><%= book.summary %> </p>

    <form action="/edit" method="POST">
      <input type="hidden" name="image_url" value="<%= book.image_url %>">
      <input type="hidden" name="title" value="<%= book.title %>">
      <input type="hidden" name="author" value="<%= book.author %>">
      <input type="hidden" name="isbn" value="<%= book.isbn %>">
      <input type="hidden" name="categorie" value="<%= book.categorie %>">
      <input type="hidden" name="summary" value="<%= book.summary %>">
      <input type="submit" value="Select">
    </form>
    <% }) %>
  </div>

</main>